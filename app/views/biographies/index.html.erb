<p id="notice"><%= notice %></p>

<div class="bio_header">
  <h1>BIO SON! READ IT!</h1>
</div>
<% @biographies.each do |biography| %>
  <% if current_user %>
   <%= link_to 'EDIT BIO', edit_biography_path(biography) %>
  <% end %>
  <%= simple_format(biography.bio) %><br>
  <h1>PRESS BITCH!</h1>
  <%= simple_format(biography.press) %>
  <% if current_user %>
    <%= link_to 'Show', biography %>
    <%= link_to 'Edit', edit_biography_path(biography) %>
    <%= link_to 'Destroy', biography, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
<br>

<%= link_to 'New Biography', new_biography_path %>
